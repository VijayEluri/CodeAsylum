<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean class="org.smallmind.nutsnbolts.spring.SystemPropertyBeanFactoryPostProcessor">
    <property name="order" value="1"/>
    <property name="propertyMap">
      <map>
        <entry key="com.codeasylum.ouroboros.registryport" value="1199"/>
      </map>
    </property>
  </bean>

  <bean class="org.smallmind.nutsnbolts.spring.PropertyPlaceholderConfigurer">
    <property name="order" value="2"/>
    <property name="ignoreResourceNotFound" value="true"/>
    <property name="ignoreUnresolvableProperties" value="false"/>
    <property name="systemPropertyMode" value="OVERRIDE"/>
    <property name="searchSystemEnvironment" value="false"/>
  </bean>

  <bean id="ouroborosService" class="com.codeasylum.stress.api.OuroborosImpl">
    <property name="rmiPort" value="${com.codeasylum.ouroboros.registryport}"/>
  </bean>

  <bean class="com.codeasylum.stress.api.spring.RemoteServiceExporter">
    <property name="serviceName" value="com.codeasylum.stress.api.Ouroboros"/>
    <property name="service" ref="ouroborosService"/>
    <property name="serviceInterface" value="com.codeasylum.stress.api.Ouroboros"/>
    <property name="replaceExistingBinding" value="true"/>
    <property name="registryPort" value="${com.codeasylum.ouroboros.registryport}"/>
  </bean>

</beans>